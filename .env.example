# =============================================================================
# AdventureMate Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# =============================================================================
# Database Configuration
# =============================================================================
DB_URL=mongodb+srv://username:password@cluster.mongodb.net/adventuremate
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME_MS=30000
DB_SERVER_SELECTION_TIMEOUT_MS=5000
DB_SOCKET_TIMEOUT_MS=45000
DB_CONNECT_TIMEOUT_MS=10000

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# =============================================================================
# Authentication & Security
# =============================================================================
JWT_ACCESS_TOKEN_SECRET=your_jwt_access_token_secret_here
JWT_REFRESH_TOKEN_SECRET=your_jwt_refresh_token_secret_here
SESSION_SECRET=your_session_secret_here
SESSION_STORE_SECRET=your_session_store_secret_here

# =============================================================================
# Google OAuth Configuration
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# Two-Factor Authentication
# =============================================================================
TWO_FACTOR_ISSUER=AdventureMate
TWO_FACTOR_SECRET_LENGTH=20
TWO_FACTOR_QR_CODE_WIDTH=300

# =============================================================================
# External Services - Mapbox
# =============================================================================
MAPBOX_TOKEN=your_mapbox_token_here

# =============================================================================
# External Services - Cloudinary
# =============================================================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_KEY=your_cloudinary_api_key
CLOUDINARY_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=AdventureMate

# =============================================================================
# External Services - Stripe
# =============================================================================
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# =============================================================================
# External Services - OpenWeatherMap
# =============================================================================
OPENWEATHER_KEY=your_openweathermap_api_key_here

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_email_password_or_app_password
# EMAIL_FROM=your_email@gmail.com

# =============================================================================
# Development & Testing
# =============================================================================
# MONGODB_URI_TEST=mongodb://localhost:27017/adventuremate_test
# CI=false

# =============================================================================
# Docker Configuration (for docker-compose)
# =============================================================================
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=password
# MONGO_DATABASE=adventuremate
