    }
  ],
  "shortcuts": [
    {
      "name": "Search Campgrounds",
      "short_name": "Search",
      "description": "Find campgrounds near you",
      "url": "/search",
      "icons": [
        {
          "src": "/icons/search-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Bookings",
      "short_name": "Bookings",
      "description": "View your current bookings",
      "url": "/bookings",
      "icons": [
        {
          "src": "/icons/bookings-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Trip Planner",
      "short_name": "Trips",
      "description": "Plan your next adventure",
      "url": "/trips",
      "icons": [
        {
          "src": "/icons/trips-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Community Forum",
      "short_name": "Forum",
      "description": "Connect with other campers",
      "url": "/forum",
      "icons": [
        {
          "src": "/icons/forum-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+adventuremate",
      "url": "/campground/%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "permissions": ["geolocation", "notifications", "background-sync"],
  "features": [
    "Cross Platform",
    "Offline Support",
    "Push Notifications",
    "Background Sync",
    "File Upload",
    "Location Services",
    "Camera Access"
  ]
}
